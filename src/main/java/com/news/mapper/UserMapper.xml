<!-- UserMapper.xml -->
<mapper namespace="com.news.mapper.UserMapper">
    <insert id="addUser" parameterType="com.news.entity.User">
        insert into user(name, password, age, role) values (#{name}, #{password}, #{age}, #{role})
    </insert>

    <select id="getUserByName" parameterType="String" resultType="com.news.entity.User">
        select * from user where name = #{name}
    </select>

    <delete id="deleteUser" parameterType="int">
        delete from user where id = #{id}
    </delete>

    <select id="getAllUsers" resultType="com.news.entity.User">
        select * from user
    </select>

    <select id="getUsersByLike" parameterType="String" resultType="com.news.entity.User">
        select * from user where name like CONCAT('%', #{keywords}, '%')
    </select>
    <select id="getUserById" parameterType="int" resultType="com.example.entity.User">
        select * from user where id = #{id}
    </select>
</mapper>